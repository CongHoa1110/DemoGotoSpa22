<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.hoathan.hoa.demogotospa.ui.activity.ChangerPassword">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <TextView
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="30sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Forgot password " />


    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/met_forgot_Email"
        android:layout_width="300dp"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content"
        android:hint="@string/hint_login_text_mail"
        android:textColorHint="@color/color_gray"
        app:met_baseColor="@color/color_gray"
        app:met_errorColor="@color/color_gray"
        app:met_floatingLabel="highlight"
        app:met_floatingLabelText="@string/label_text_mail"
        app:met_maxCharacters="20"
        app:met_primaryColor="@color/color_gray"
        app:met_singleLineEllipsis="true"
        app:met_textColorHint="@color/color_gray" />
        <Button
            android:padding="@dimen/dimen_5"
            android:onClick="onClick"
            android:layout_margin="10dp"
            android:textColor="@color/color_white"
            android:background="@drawable/button_selecter"
            android:text="Reset password"
            android:id="@+id/btn_resetPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
</LinearLayout>
