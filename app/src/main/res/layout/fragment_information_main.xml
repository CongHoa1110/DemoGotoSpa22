<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/apBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_infomation"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:layout_collapseMode="pin"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <TextView
                android:id="@+id/toolbar_information_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Information"
                android:textColor="@color/color_white"
                android:textSize="@dimen/text_18"
                android:textStyle="bold" />


        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/apBar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:clickable="true"
                android:id="@+id/rlt_profile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/texview_selecter"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_infomation_spa_Avatar"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="@dimen/dimen_10"
                    android:src="@drawable/spa_two" />

                <TextView
                    android:id="@+id/txv_infomation_spa_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_marginTop="@dimen/dimen_20"
                    android:layout_toRightOf="@+id/img_infomation_spa_Avatar"
                    android:text="hoa than"
                    android:textSize="@dimen/text_20"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txv_setting_spa_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txv_infomation_spa_name"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_toRightOf="@+id/img_infomation_spa_Avatar"
                    android:text="My profile" />

            </RelativeLayout>

            <LinearLayout
                android:clickable="true"
                android:id="@+id/ln_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rlt_profile"
                android:layout_marginTop="@dimen/dimen_15"
                android:background="@drawable/texview_selecter">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_setting_location"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="@dimen/dimen_10"
                    android:src="@mipmap/icons_marker" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:text="Spa around here "
                    android:textColor="@color/color_gray" />
            </LinearLayout>

            <View
                android:id="@+id/view"
                android:background="@color/color_line"
                android:layout_below="@+id/ln_location"
                android:layout_width="match_parent"
                android:layout_height="1dp" />
            <LinearLayout
                android:clickable="true"
                android:id="@+id/ln_spachat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view"
                android:background="@drawable/texview_selecter">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_spachat"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="@dimen/dimen_10"
                    android:src="@mipmap/icons_chat" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:text="Spa Chat"
                    android:textColor="@color/color_gray" />
            </LinearLayout>

        </RelativeLayout>


    </ScrollView>


</RelativeLayout>