<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white">

    <include layout="@layout/ic_toobar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/apBar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txv_profile_information"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/texview_selecter"
                android:drawableRight="@drawable/icon_next"
                android:gravity="center_vertical"
                android:padding="@dimen/dimen_10"
                android:text="Profile"
                android:textSize="@dimen/text_16" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="@dimen/dimen_10"
                android:layout_marginRight="@dimen/dimen_10"
                android:background="@color/color_line" />

            <TextView
                android:id="@+id/txv_profile_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/texview_selecter"
                android:drawableRight="@drawable/icon_next"
                android:gravity="center_vertical"
                android:padding="@dimen/dimen_10"
                android:text="Setting"
                android:textSize="@dimen/text_16" />

        </LinearLayout>
    </ScrollView>


</RelativeLayout>