<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/apBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_comment"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:gravity="center_horizontal"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <TextView
                android:id="@+id/toolbar_profile_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Cong Hoa"
                android:textColor="@color/color_white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/img_profile_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@drawable/icon_back" />

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/apBar">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
        <TextView
            android:padding="@dimen/dimen_10"
            android:background="@drawable/texview_selecter"
            android:id="@+id/txv_profile_information"
            android:textSize="@dimen/text_16"
            android:layout_marginTop="@dimen/dimen_10"
            android:gravity="center_vertical"
            android:drawableRight="@drawable/icon_next"
            android:text="Info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
            <TextView
                android:textStyle="bold"
                android:textColor="@color/color_gray"
                android:layout_marginLeft="@dimen/dimen_10"
                android:layout_marginTop="@dimen/dimen_10"
                android:text="Setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:background="@color/color_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <TextView
                android:padding="@dimen/dimen_10"
                android:background="@drawable/texview_selecter"
                android:id="@+id/txv_profile_setting"
                android:textSize="@dimen/text_16"
                android:layout_marginTop="@dimen/dimen_10"
                android:gravity="center_vertical"
                android:drawableRight="@drawable/icon_next"
                android:text=" General setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </ScrollView>


</RelativeLayout>