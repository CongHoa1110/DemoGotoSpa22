<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
  <include layout="@layout/ic_toobar"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/apBar">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
        <TextView
            android:padding="@dimen/dimen_10"
            android:background="@drawable/texview_selecter"
            android:id="@+id/txv_profile_information"
            android:textSize="@dimen/text_16"
            android:layout_marginTop="@dimen/dimen_10"
            android:gravity="center_vertical"
            android:drawableRight="@drawable/icon_next"
            android:text="Info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
            <TextView
                android:textStyle="bold"
                android:textColor="@color/color_gray"
                android:layout_marginLeft="@dimen/dimen_10"
                android:layout_marginTop="@dimen/dimen_10"
                android:text="Setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:background="@color/color_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <TextView
                android:padding="@dimen/dimen_10"
                android:background="@drawable/texview_selecter"
                android:id="@+id/txv_profile_setting"
                android:textSize="@dimen/text_16"
                android:layout_marginTop="@dimen/dimen_10"
                android:gravity="center_vertical"
                android:drawableRight="@drawable/icon_next"
                android:text=" General setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </ScrollView>


</RelativeLayout>